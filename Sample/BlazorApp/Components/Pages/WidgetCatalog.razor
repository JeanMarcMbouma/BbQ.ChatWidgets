    }

    .widget-detail h2 {
        margin: 0 0 0.5rem 0;
        color: #333;
        font-size: 1.5rem;
    }

    .detail-description {
        margin: 0 0 1.5rem 0;
        color: #666;
        font-size: 1rem;
    }

    .detail-section {
        margin-bottom: 1.5rem;
    }

    .detail-section h3 {
        margin: 0 0 0.75rem 0;
        color: #333;
        font-size: 1rem;
        font-weight: 600;
    }

    .detail-section code {
        background: #f5f5f5;
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-family: "Courier New", monospace;
        color: #c33;
    }

    .detail-section ul {
        margin: 0;
        padding-left: 1.5rem;
        list-style: disc;
    }

    .detail-section li {
        margin: 0.25rem 0;
        color: #666;
    }

    .detail-section pre {
        background: #f5f5f5;
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
        margin: 0;
    }

    .detail-section code {
        font-size: 0.85rem;
        color: #333;
    }
</style>

<style>
    @@media (max-width: 1024px) {
        .catalog-content {
            grid-template-columns: 1fr;
        }

        .catalog-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 1rem;
            height: auto;
        }
    }
</style>


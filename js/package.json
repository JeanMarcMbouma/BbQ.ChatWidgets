{
  "name": "@bbq-chat/widgets",
  "version": "1.0.0",
  "description": "Framework-agnostic widget library for AI chat UIs",
  "license": "MIT",
  "author": "BbQ ChatWidgets Contributors",
  "homepage": "https://github.com/JeanMarcMbouma/BbQ.ChatWidgets",
  "repository": {
    "type": "git",
    "url": "https://github.com/JeanMarcMbouma/BbQ.ChatWidgets.git",
    "directory": "js"
  },
  "bugs": {
    "url": "https://github.com/JeanMarcMbouma/BbQ.ChatWidgets/issues"
  },
  "keywords": [
    "chat",
    "widgets",
    "ui",
    "interactive",
    "form",
    "components",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./models": {
      "types": "./dist/models/index.d.ts",
      "import": "./dist/models/index.js",
      "require": "./dist/models/index.cjs"
    },
    "./renderers": {
      "types": "./dist/renderers/index.d.ts",
      "import": "./dist/renderers/index.js",
      "require": "./dist/renderers/index.cjs"
    },
    "./handlers": {
      "types": "./dist/handlers/index.d.ts",
      "import": "./dist/handlers/index.js",
      "require": "./dist/handlers/index.cjs"
    },
    "./styles": "./dist/styles/index.css",
    "./styles/light": "./dist/styles/light.css",
    "./styles/dark": "./dist/styles/dark.css",
    "./styles/corporate": "./dist/styles/corporate.css"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node scripts/build.mjs",
    "docs:js": "npx typedoc --out ../docs/js src --tsconfig tsconfig.json --options typedoc.json",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run lint"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^8.55.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.1.1",
    "typedoc": "^0.28.15",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
@rendermode @(new InteractiveServerRenderMode())
@page "/widget-catalog"
@using BbQ.ChatWidgets.Models
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager NavigationManager

<PageTitle>Widget Catalog - BbQ Chat Widgets</PageTitle>

<div class="catalog-container">
    <div class="catalog-header">
        <button class="btn-back" @onclick="GoBack">‚Üê Back</button>
        <div>
            <h1>üìö Widget Catalog</h1>
            <p>Complete reference of all available widgets</p>
        </div>
    </div>

    <div class="catalog-content">
        <div class="catalog-grid">
            @foreach (var widget in widgets)
            {
                <div class="widget-card" @onclick="@(() => SelectWidget(widget))">
                    <div class="widget-icon">@widget.Icon</div>
                    <h3>@widget.Name</h3>
                    <p>@widget.Description</p>
                </div>
            }
        </div>

        @if (selectedWidget != null)
        {
            <div class="widget-detail">
                <h2>@selectedWidget.Name</h2>
                <p class="detail-description">@selectedWidget.Description</p>
                
                <div class="detail-section">
                    <h3>Type</h3>
                    <code>@selectedWidget.WidgetType</code>
                </div>

                <div class="detail-section">
                    <h3>Properties</h3>
                    <ul>
                        @foreach (var prop in selectedWidget.Properties)
                        {
                            <li><code>@prop</code></li>
                        }
                    </ul>
                </div>

                <div class="detail-section">
                    <h3>Example JSON</h3>
                    <pre><code>@selectedWidget.ExampleJson</code></pre>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .catalog-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        background-color: #f5f5f5;
    }

    .catalog-header {
        padding: 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        gap: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-back {
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 500;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    .btn-back:hover {

@using BbQ.ChatWidgets.Models
@using Microsoft.AspNetCore.Components

<div class="bbq-chat-container">
    <div class="bbq-chat-messages">
        @if (ChatTurns != null)
        {
            @foreach (var turn in ChatTurns)
            {
                <div class="bbq-chat-message bbq-message-@turn.Role.ToString().ToLower()">
                    <div class="bbq-message-content">
                        @((MarkupString)turn.Content)
                    </div>
                    
                    @if (turn.Widgets != null && turn.Widgets.Count > 0)
                    {
                        <div class="bbq-message-widgets">
                            @foreach (var widget in turn.Widgets)
                            {
                                <WidgetRenderer Widget="widget" OnAction="HandleWidgetAction">
                                    <Overrides>
                                        @WidgetOverrides
                                    </Overrides>
                                </WidgetRenderer>
                            }
                        </div>
                    }
                </div>
            }
        }
    </div>

    @if (IsLoading)
    {
        <div class="bbq-chat-loading">
            <span class="bbq-spinner"></span>
            <span>Loading...</span>
        </div>
    }
</div>

<style>
    .bbq-chat-container {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .bbq-chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .bbq-chat-message {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .bbq-message-user {
        align-self: flex-end;
        background-color: #e3f2fd;
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        max-width: 70%;
    }

    .bbq-message-assistant {
        align-self: flex-start;
        background-color: #f5f5f5;
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        max-width: 85%;
    }

    .bbq-message-content {
        line-height: 1.5;
    }

    .bbq-message-widgets {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .bbq-chat-loading {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem;
        color: #666;
    }

    .bbq-spinner {
        width: 20px;
        height: 20px;
        border: 3px solid #f3f3f3;
        border-top: 3px solid #3498db;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

@code {
    [Parameter]
    public List<ChatTurn>? ChatTurns { get; set; }

    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public EventCallback<(string Action, object? Payload)> OnWidgetAction { get; set; }

    [Parameter]
    public RenderFragment? WidgetOverrides { get; set; }

    private async Task HandleWidgetAction((string Action, object? Payload) args)
    {
        await OnWidgetAction.InvokeAsync(args);
    }
}

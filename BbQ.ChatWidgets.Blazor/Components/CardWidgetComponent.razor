@using BbQ.ChatWidgets.Models
@using Microsoft.AspNetCore.Components

<div class="bbq-widget bbq-card-widget">
    <div class="bbq-card">
        @if (!string.IsNullOrEmpty(Widget?.ImageUrl))
        {
            <img src="@Widget.ImageUrl" alt="@Widget.Title" />
        }
        <h3>@Widget?.Title</h3>
        @if (!string.IsNullOrEmpty(Widget?.Description))
        {
            <p>@Widget.Description</p>
        }
        <button class="bbq-button" @onclick="HandleClick">@Widget?.Label</button>
    </div>
</div>

@code {
    [Parameter]
    public CardWidget? Widget { get; set; }

    [Parameter]
    public EventCallback<(string Action, object? Payload)> OnAction { get; set; }

    private async Task HandleClick()
    {
        if (Widget != null)
        {
            await OnAction.InvokeAsync((Widget.Action, null));
        }
    }
}

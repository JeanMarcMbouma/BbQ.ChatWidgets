        opacity: 0.9;
        font-size: 0.95rem;
    }

    .catalog-content {
        flex: 1;
        overflow-y: auto;
        padding: 2rem;
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 2rem;
    }

    .catalog-grid {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        height: fit-content;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .widget-card {
        padding: 1rem;
        border: 2px solid transparent;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
        background: #f9f9f9;
    }

    .widget-card:hover {
        border-color: #667eea;
        background: white;
        transform: translateX(4px);
    }

    .widget-icon {
        font-size: 1.5rem;

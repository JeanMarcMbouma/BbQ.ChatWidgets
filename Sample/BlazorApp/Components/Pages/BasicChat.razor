</style>

@code {
    private string userInput = "";
    private string error = "";
    private bool isLoading = false;
    private List<ChatTurn> chatTurns = new();
    private string threadId = Guid.NewGuid().ToString();

    protected override async Task OnInitializedAsync()
    {
        // Initialize with welcome message
        chatTurns.Add(new ChatTurn(
            ChatRole.Assistant,
            "Hello! I'm here to help. Feel free to ask me anything or interact with the widgets."
        ));
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(userInput))
            return;

        try
        {
            error = "";
            isLoading = true;
            StateHasChanged();

            // Add user message to chat
            chatTurns.Add(new ChatTurn(ChatRole.User, userInput));
            var messageToSend = userInput;
            userInput = "";
            StateHasChanged();

            // Send to backend
            var baseUri = NavigationManager.BaseUri.TrimEnd('/');
            var response = await HttpClient.PostAsJsonAsync(
                $"{baseUri}/api/chat/message", 
                new
                {
                    threadId,
                    message = messageToSend
                }
            );

            if (response.IsSuccessStatusCode)
            {
                var json = await response.Content.ReadAsStringAsync();
                var result = JsonSerializer.Deserialize<ChatTurn>(json, BbQ.ChatWidgets.Models.Serialization.Default);
                
                // Add assistant response with widgets if any
                if (result?.Widgets != null && result.Widgets.Count > 0)
                {
                    chatTurns.Add(new ChatTurn(
                        ChatRole.Assistant,
                        result.Content ?? "",
                        result.Widgets
                    ));
                }
                else
                {
                    chatTurns.Add(new ChatTurn(
                        ChatRole.Assistant,
                        result?.Content ?? "I didn't understand that. Could you rephrase?"
                    ));
                }
                threadId = result?.ThreadId ?? threadId;
            }
            else
            {
                error = $"Error: {response.StatusCode} - {response.ReasonPhrase}";
            }
        }
        catch (Exception ex)
        {
            error = $"Error sending message: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleWidgetAction((string Action, object? Payload) args)
    {
        var (action, payload) = args;
        var payloadText = payload != null ? System.Text.Json.JsonSerializer.Serialize(payload) : "No data";
        chatTurns.Add(new ChatTurn(
            ChatRole.User,
            $"**Action triggered:** `{action}`"
        ));
        StateHasChanged();

        // TODO: Handle specific action in backend if needed
        await Task.Delay(500);
        chatTurns.Add(new ChatTurn(
            ChatRole.Assistant,
            $"Got it! I processed your action '{action}'."
        ));
        StateHasChanged();
    }

    private async Task HandleKeyUp(KeyboardEventArgs args)
    {
        if (args.Key == "Enter" && !args.ShiftKey)
        {
            await SendMessage();
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/");
    }

    public class ChatMessage
    {
        public string? Content { get; set; }
        public List<ChatWidget>? Widgets { get; set; } = new();
    }
}
